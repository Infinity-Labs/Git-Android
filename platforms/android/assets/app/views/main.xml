<Page loaded="onPageLoaded">
	<GridLayout rows="auto, *">
		<StackLayout orientation="horizontal" row="0">
			<Label text="Choose/Create a Repository"/>
		</StackLayout>
		<ListView items="{{ repoItems }}" itemTap="repoItem"  row="1">
			<ListView.itemTemplate>
                <Label text="{{ name }}" />
            </ListView.itemTemplate>
		</ListView>
	</GridLayout>
</Page>